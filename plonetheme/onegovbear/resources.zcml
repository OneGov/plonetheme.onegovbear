    i18n_domain="plonetheme.onegovbear">

    <include package="ftw.theming" file="meta.zcml" />

    <theme:scss_factory factory=".browser.dynamic_scss_resources.custom_design_variables_resource_factory" />

    <theme:scss file="theme/scss/globals/variables.scss" slot="variables"
                after="ftw.theming:resources/scss/globals/variables.scss" />

    <theme:resources profile="plonetheme.onegovbear:default" slot="theme">
        <theme:scss file="theme/scss/accessibility.scss" />

        <theme:scss file="theme/scss/elements/menues.scss" />
        <theme:scss file="theme/scss/elements/buttons.scss" />
        <theme:scss file="theme/scss/elements/tabs.scss" />
        <theme:scss file="theme/scss/elements/form.scss" />

        <theme:scss file="theme/scss/site/editbar.scss" />
        <theme:scss file="theme/scss/site/portaltop.scss" />
        <theme:scss file="theme/scss/site/layout.scss" />
        <theme:scss file="theme/scss/site/typography.scss" />

        <theme:scss file="theme/scss/pagewrapper.scss" />
        <theme:scss file="theme/scss/startpage.scss" />
        <theme:scss file="theme/scss/contacts.scss" />
        <theme:scss file="theme/scss/content.scss" />
        <theme:scss file="theme/scss/pathbar.scss" />
        <theme:scss file="theme/scss/actions.scss" />
        <theme:scss file="theme/scss/portlets.scss" />
